@import "/wxParse/wxParse.wxss";

.article {
  padding: 16px;
  border-radius: 4px;
  background: #fff;
  box-shadow: rgba(0,0,0,0.2) 0px 1px 2px 0px;
  border: 0px solid rgba(123, 123, 123, 0.498039);
}

.article .name {
  padding-bottom: 4px;
  font-size: 18px;
  color:#135200;
}

.article .time {
  padding-bottom: 8px;
  font-size: 12px;
  color: #8c8c8c;
}

.article .bbc-crosshead {
  margin: 8px 0;
  color:#237804;
}

.article .wxParse-p {
  margin: 4px 0;
  font-size: 14px;
}

.article .wxParse-b.wxParse-inline {
  margin: 0 4px;
}

.article .wxParse-ul {
  font-size: 14px;
}

#article-video {
  width: 100%;
}

.article .origin {
  font-size:14px;
  margin: 16px 0;
  color:#096dd9;
  text-decoration:underline;
}