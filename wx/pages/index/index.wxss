/**index.wxss**/
.articles-box {
  height: 100%;
}

.articles {
  height: 100vh;
}

.articles .article {
  padding: 8px;
  margin-bottom: 8px;
  background-color: #fff;
  box-shadow: rgba(0,0,0,0.2) 0px 1px 2px 0px;
  border: 0px solid rgba(123, 123, 123, 0.498039);
  border-radius: 4px;
}

.articles .article .name {
  padding-bottom: 4px;
  font-size: 18px;
  color: #135200;
}

.articles .article .time {
  padding-bottom: 4px;
  font-size: 12px;
  color: rgba(0,0,0,0.45);
}

.articles .article .summary {
  padding-bottom: 8px;
  font-size: 14px;
  color: rgba(0,0,0,0.65);
}

.end {
  font-size: 12px;
  color: rgba(0,0,0,0.25);
  text-align: center;
}

.loading {
  font-size: 12px;
  color: rgba(0,0,0,0.25);
  text-align: center;
}

.final-info {
  margin: 8px;
  color: #ff7a45;
}

.final-info-p {
  margin-bottom: 12px;
}